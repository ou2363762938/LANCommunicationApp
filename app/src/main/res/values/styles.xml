<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/color_blue</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/fade</item>
    </style>

<!--    <style name="Animation" parent="AppTheme">-->
<!--        <item name="android:windowAnimationStyle">@style/fade</item>-->
<!--    </style>-->

    <style name="fade" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/alpha_in</item>
<!--        <item name="android:activityOpenExitAnimation">@anim/alpha_out</item>-->
<!--        <item name="android:activityCloseEnterAnimation">@anim/alpha_in</item>-->
        <item name="android:activityCloseExitAnimation">@anim/alpha_out</item>
    </style>

    <!-- Base application startup theme-->
    <style name="StartAnimationTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_transparent</item>
        <item name="colorPrimaryDark">@color/color_transparent</item>
        <item name="colorAccent">@color/color_blue</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/start_animation_icon</item>
    </style>

    <style name="TitleStyle" >
        <item name="android:textColor">@color/titleTextColor</item>
        <item name="android:textSize">@dimen/titleTextSize</item>
    </style>

    <style name="ItemStyle">
        <item name="android:paddingStart">@dimen/dp_20</item>
        <item name="android:paddingEnd">@dimen/dp_20</item>
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
        <item name="android:layout_width">@dimen/dp_60</item>
        <item name="android:background">@color/itemBackgroundColor</item>
        <item name="android:layout_marginTop">@dimen/dp_3</item>
    </style>

    <style name="TextStyleDark">
        <item name="android:textColor">@color/textColorDark</item>
        <item name="android:textSize">@dimen/textSizeDark</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextStyle">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MessageTitleTextStyle">
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textColor">@color/textColorDark</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MessageContentTextStyle">
        <item name="android:textSize">@dimen/messageTextSize</item>
        <item name="android:textColor">@color/messageTextColor</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TimeStyle">
        <item name="android:textSize">@dimen/timeTextSize</item>
        <item name="android:textColor">@color/timeTextColor</item>
        <item name="android:layout_width">@dimen/dp_140</item>
    </style>

    <style name="ChatRoomContactName">
        <item name="android:textSize">@dimen/chatRoomContactNameTextSize</item>
        <item name="android:textColor">@color/messageTextColor</item>
    </style>

    <style name="ChatRoomMessage">
        <item name="android:textSize">@dimen/chatRoomMessageTextSize</item>
        <item name="android:textColor">@color/textColorDark</item>
        <item name="android:layout_marginStart">@dimen/dp_10</item>
        <item name="android:layout_marginEnd">@dimen/dp_10</item>
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:maxWidth">@dimen/dp_290</item>
        <item name="android:maxEms">11</item>
        <item name="android:singleLine">false</item>
        <item name="android:maxLines">4</item>
        <item name="android:focusable">false</item>
        <item name="android:editable">false</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:background">@drawable/bg_message_box</item>
    </style>

    <style name="InputMessageBox">
        <item name="android:layout_weight">7</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:textSize">@dimen/chatRoomMessageTextSize</item>
        <item name="android:maxLength">30</item>
        <item name="android:minLines">1</item>
        <item name="android:focusable">true</item>
        <item name="android:maxEms">11</item>
        <item name="android:background">@drawable/bg_message_input</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
</resources>
