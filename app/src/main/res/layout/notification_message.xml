<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notification_message_layout_first"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white">
    <LinearLayout
        android:id="@+id/notification_message_layout_second"
        android:layout_width="@dimen/dp_64"
        android:layout_height="@dimen/dp_64"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/notification_avatar"
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginStart="@dimen/dp_7"
            android:src="@drawable/default_head"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/notification_message_layout_fourth"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/notification_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_24"
            android:textSize="@dimen/sp_14"
            android:gravity="center|left"/>
        <TextView
            android:id="@+id/notification_message"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:textSize="@dimen/sp_20"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxEms="10"
            android:gravity="center|left"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/notification_message_time"
            android:layout_width="@dimen/dp_40"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_14"
            android:gravity="center|right"/>
    </LinearLayout>
</LinearLayout>